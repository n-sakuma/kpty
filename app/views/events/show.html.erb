<%- model_class = Event -%>
<!-- <div class="page-header"> -->
  <h2><%=t '.title', :default => model_class.model_name.human %></h2>
<!-- </div> -->

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @event.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @event.description %></dd>
</dl>

<p>
  <b>Keep</b>
  <%= render 'things/things', thing: 'Keep' %>
  <%= form_for Thing.new, url: things_path(@event), :remote => true do |f| %>
    <%= f.hidden_field :event_id, value: @event.id %>
    <%= f.hidden_field :type, value: 'Keep' %>
    <%= f.text_field :content, id: 'keep_content_field' %>
    <%= f.submit "Send" %>
  <% end %>
</p>

<p>
  <b>Problem</b>
  <%= render 'things/things', thing: 'Problem' %>
  <%= form_for Thing.new, url: things_path(@event), :remote => true do |f| %>
    <%= f.hidden_field :event_id, value: @event.id %>
    <%= f.hidden_field :type, value: 'Problem' %>
    <%= f.text_field :content, id: 'problem_content_field' %>
    <%= f.submit "Send" %>
  <% end %>
</p>

<p>
  <b>Try</b>
  <%= render 'things/things', thing: 'Try' %>
  <%= form_for Thing.new, url: things_path(@event), :remote => true do |f| %>
    <%= f.hidden_field :event_id, value: @event.id %>
    <%= f.hidden_field :type, value: 'Try' %>
    <%= f.text_field :content, id: 'try_content_field' %>
    <%= f.submit "Send" %>
  <% end %>
</p>


<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              events_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_event_path(@event), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              event_path(@event),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

<%= subscribe_to "/events/#{@event.id}" %>
